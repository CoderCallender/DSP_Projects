#include "codec.h"
#include "stm32f4xx_hal.h" //required for I2C

HAL_StatusTypeDef codec_read_register(uint8_t reg, uint16_t *data)
{
	//return HAL_I2C_Mem_Read(&hi2c, CODEC_I2C_ADDR, reg, 1, &data, 1, HAL_MAX_DELAY);
	return HAL_I2C_Mem_Read(&hi2c1, CODEC_I2C_ADDR, reg, I2C_MEMADD_SIZE_8BIT, &data, 1, HAL_MAX_DELAY);
}
